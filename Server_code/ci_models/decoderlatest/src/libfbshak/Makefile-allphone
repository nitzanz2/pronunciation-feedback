include $(S3ROOT)/Makefile.defines
VPATH = .:..


TARGET = s3allphone

OBJS =	agc.o \
	cmn.o \
	gauden.o \
	senone.o \
	interp.o \
	tmat.o \
	logs3.o \
	vector.o \
	mdef.o \
	allphone.o \
	allphone-main.o

CFLAGS = $(S3DEBUG) ${$(MACHINE)_CFLAGS}

$(TARGET): $(OBJS)
	$(CC) $(CFLAGS) -L$(LIBDIR) -o $(TARGET) $(OBJS) -lfeat -lio -lutil -lm -lpthread

install: $(TARGET)
	- mv $(BINDIR)/$(TARGET) $(BINDIR)/$(TARGET).old
	cp $(TARGET) $(BINDIR)
	rm -f $(BINDIR)/$(TARGET).old

clean:
	rm -f *.o *.a *.BAK *.CKP .*.BAK .*.CKP *~ .*~ #*#
